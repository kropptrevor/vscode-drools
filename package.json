{
    "name": "drools",
    "displayName": "Drools",
    "description": "Language support for Drools files (.drl)",
    "version": "1.0.0",
    "publisher": "kropptrevor",
    "repository": {
        "type": "git",
        "url": "https://github.com/kropptrevor/vscode-drools"
    },
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "drools",
                "aliases": [
                    "Drools",
                    "drools"
                ],
                "extensions": [
                    ".drl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "drools",
                "scopeName": "source.drools",
                "path": "./syntaxes/Drools.json",
                "embeddedLanguages": {
                    "meta.embedded.block.java": "java"
                }
            }
        ]
    }
}
